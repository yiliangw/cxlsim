[Unit]
Description=Bring up all Open vSwitch bridges
After=openvswitch-switch.service network.target

[Service]
Type=oneshot
ExecStart=/bin/bash -c "ip link set ovs-system up; for bridge in $(ovs-vsctl list-br); do ip link set $bridge up; done"
RemainAfterExit=true

[Install]
WantedBy=multi-user.target
